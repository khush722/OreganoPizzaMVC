@model IEnumerable<OreganoPizzaMVC.Models.Pizzas>

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <h1>Pizzas</h1>

  
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PizzaName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th><a asp-action="Create">New</a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PizzaName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PizzaId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PizzaId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PizzaId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}